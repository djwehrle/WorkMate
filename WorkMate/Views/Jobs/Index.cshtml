@using WorkMate.Models;

@model WorkMate.ViewModels.JobsViewModel

@{
    ViewBag.Title = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Jobs</h2>
    <h3>Manage your jobs here.</h3>

    <hr />

    <div class="row">
        @Html.ActionLink("Add New Job", "New", null, new { @class = "btn btn-primary pull-right" })
    </div>

    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Job</th>
                <th>Company</th>
                <th>Position</th>
                <th>Job Type</th>
                <th>Pay Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Job job in Model.Jobs)
            {
                <tr class="job" data-job-id="@job.ID">
                    <td>@job.Name</td>
                    <td>@job.Company</td>
                    <td>@job.Position</td>
                    <td>@job.JobType.ToString()</td>
                    <td>$@job.PayRate.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/Jobs/jobs-index.js")
}