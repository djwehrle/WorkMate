@model WorkMate.ViewModels.ScheduleFormViewModel

@{
    ViewBag.Title = "Edit Work";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Work</h2>

@using (Html.BeginForm("Edit", "Schedule", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.Partial("_ScheduleForm")

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            <button type="button" class="btn btn-danger js-delete" data-schedule-id="@Model.Schedule.ID">Delete</button>
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Schedule/schedule-form.js")
}